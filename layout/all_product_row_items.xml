<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp">


    <ImageView
        android:id="@+id/productImage"
        android:layout_width="249dp"
        android:layout_height="258dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sugar" />

    <TextView
        android:id="@+id/name5"
        android:layout_width="57dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Price"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name4" />

    <TextView
        android:id="@+id/name6"
        android:layout_width="26dp"
        android:layout_height="17dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="qty"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/name5"
        app:layout_constraintStart_toEndOf="@+id/name5"
        app:layout_constraintTop_toTopOf="@+id/name5" />

    <TextView
        android:id="@+id/name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Product_name"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="unit"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/name6"
        app:layout_constraintStart_toEndOf="@+id/name6"
        app:layout_constraintTop_toTopOf="@+id/name6" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="41dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/name3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name3"
        app:srcCompat="@drawable/cartredarrow" />
</androidx.constraintlayout.widget.ConstraintLayout>